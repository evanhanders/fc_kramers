export dedalus_dir=/nobackup/eanders/kramers_runs/

cd $PBS_O_WORKDIR

RA=6.26e7
B=-1e-4
S=2.5

mkdir $dedalus_dir

date
mpiexec_mpt -n 128 ~/.python3 FC_poly_kramers.py \
        --run_time_buoy=1e3 \
        --run_time=7.5 \
        --nz=256 \
        --nx=1024 \
        --aspect=4 \
        --Rayleigh=$RA \
        --kram_b=$B \
        --root_dir=$dedalus_dir \
        --max_ncc_bandwidth=10 \
        > $dedalus_dir/out.s$S.b$B.$PBS_JOBID

